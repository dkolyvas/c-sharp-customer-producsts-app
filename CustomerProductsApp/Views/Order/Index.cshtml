
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <h1> Order List for the Selected Customer </h1>
    <table class="table table-primary mt-2 mb-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer</th>
                <th>Product</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tdata>
            @if (ViewData["Orders"] is not null)
            {
                @foreach (var order in ViewData["Orders"] as List<CustomerProductsApp.DTO.OrderShowDTO>)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.CustomerName</td>
                        <td>@order.ProductName</td>
                        <td>@order.Date</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="~/Order/Update/@order.Id">Update</a>
                            <a class="btn btn-danger btn-sm" href="~/Order/Delete/@order.Id/Customer/@order.CustomerId">Delete</a>
                        </td>

                    </tr>

                }
            }
        </tdata>
    </table>
    <div class="row offset-4 col-md-2 mb-3">
        <a class="btn btn-primary" href="~/Order/Customer/@ViewData["CustomerId"]/Insert">Add New</a>
    </div>
    <div class="text-warning text-sm-start">
        <p>
            @if (ViewData["Errors"] is not null)
            {
                @foreach (var err in ViewData["Errors"] as List<String>)
                {
                    @err
                }
            }
        </p>
    </div>
</div>

